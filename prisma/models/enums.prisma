enum AccessRequestStatus {
  pending
  approved
  rejected
  expired
}

// Slot offers
enum SlotOfferStatus {
  active
  expired
  booked
  cancelled
}

// Meeting request status
enum MeetingRequestStatus {
  pending           // Just created
  access_requested  // Email sent to target
  access_granted    // Target approved
  slots_offered     // Available times sent
  booked            // Meeting confirmed
  cancelled         // Process cancelled
  expired           // Request timed out
}
enum MeetingSourceType {
  manual      // Created manually
  telegram    // Created via /task command
  calendar    // Imported from calendar
  recurring   // Part of recurring series
}

enum MeetingStatus {
  confirmed    // Matches Google "confirmed"
  tentative    // Matches Google "tentative"
  cancelled    // Matches Google "cancelled"
}

enum AttendeeStatus {
  pending
  accepted
  declined
  tentative
}
enum EventStatus {
  confirmed
  tentative
  cancelled
}